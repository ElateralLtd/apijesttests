{
  "extends": "airbnb",
  "plugins": [
    "import"
  ],
  "env": {
    "mocha": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "new-cap": 0,
    "max-len": 0,
    "arrow-body-style": 0,
    "no-param-reassign": 0,
    "no-useless-escape": 0,
    "no-unused-vars": 0,
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error",
          "info"
        ]
      }
    ]
  }
}